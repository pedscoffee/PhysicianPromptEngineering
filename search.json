---
layout: null
---
{% assign pages_with_titles = site.pages | where_exp: "item", "item.title != nil" %}
{% assign all_docs = site.posts | concat: site.prompts | concat: pages_with_titles %}
[
  {% for doc in all_docs %}
    {
      "title"    : "{{ doc.title | escape }}",
      "url"      : "{{ site.baseurl }}{{ doc.url }}",
      "content"  : "{{ doc.content | strip_html | strip_newlines | truncate: 200 | escape }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
