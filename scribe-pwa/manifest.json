{
  "name": "Doc Pixel's Coffee - Offline Medical Scribe",
  "short_name": "Coffee",
  "description": "Privacy-first offline medical scribe with AI transcription and customizable clinical note generation",
  "start_url": "/scribe-pwa/",
  "display": "standalone",
  "background_color": "#0d1117",
  "theme_color": "#2C1810",
  "orientation": "any",
  "scope": "/scribe-pwa/",
  "icons": [
    {
      "src": "/images/coffee-icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/coffee-icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "categories": ["health", "medical", "productivity", "utilities"],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/scribe-pwa/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "audio",
          "accept": ["audio/*", ".wav", ".mp3", ".m4a", ".webm", ".ogg"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/scribe-pwa/",
      "accept": {
        "audio/*": [".wav", ".mp3", ".m4a", ".webm", ".ogg"]
      }
    }
  ]
}
